    <version>4.7.3-202008270723550726-918276ee</version>
  </parent>
  <artifactId>dremio-services-jobs</artifactId>
  <name>Services - Jobs</name>

  <dependencies>
    <dependency>
      <groupId>com.dremio</groupId>
