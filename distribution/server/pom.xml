    <artifactId>dremio-distribution-parent</artifactId>
    <version>1.3.1-201712020438070881-a7af5c8</version>
  </parent>

  <artifactId>dremio-distribution</artifactId>
  <packaging>pom</packaging>
  <name>Distribution - Server Packaging</name>

