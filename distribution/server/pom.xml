      <classifier>bundled</classifier>
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack</id>
            <phase>initialize</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>com.dremio.distribution</groupId>
                  <artifactId>dremio-distribution-resources</artifactId>
                  <version>${project.version}</version>
                  <outputDirectory>${project.build.directory}/distribution-resources</outputDirectory>
                </artifactItem>
              </artifactItems>

            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>distro-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptorRefs>
                <descriptorRef>server-tarball</descriptorRef>
              </descriptorRefs>
              <appendAssemblyId>false</appendAssemblyId>
              <finalName>${dremio.distribution.name}-${project.version}</finalName>
              <tarLongFileMode>gnu</tarLongFileMode>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>com.dremio.distribution</groupId>
            <artifactId>dremio-distribution-resources</artifactId>
            <version>${project.version}</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>rpm</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>rpm-maven-plugin</artifactId>
            <extensions>true</extensions>
            <executions>
              <execution>
                <id>compute-rpm-version</id>
                <goals>
                  <goal>version</goal>
                </goals>
                <configuration>
                  <versionProperty>dremio.rpm.version</versionProperty>
                </configuration>
              </execution>
              <execution>
                <id>attach-rpm</id>
                <goals>
                  <goal>attached-rpm</goal>
                </goals>
                <configuration>
                  <name>${dremio.distribution.name}</name>
                  <summary>Dremio Self-service Data Platform.</summary>
                  <description>
                      Dremio is a platform for providing self-service analytics on modern data.
                  </description>
                  <license>2016 Dremio Corporation</license>
                  <version>${project.version}</version>
                  <vendor>Dremio Corporation</vendor>
                  <url>http://www.dremio.com</url>
                  <autoRequires>false</autoRequires>
                  <autoProvides>false</autoProvides>
                  <prefix>/opt</prefix>
                  <group>Other</group>
                  <packager>Dremio</packager>
                  <repackJars>false</repackJars>
                  <defaultFilemode>644</defaultFilemode>
                  <defaultDirmode>755</defaultDirmode>
                  <defaultUsername>root</defaultUsername>
                  <defaultGroupname>wheel</defaultGroupname>
                  <mappings>
                    <mapping>
                      <directory>/opt/dremio/bin</directory>
                      <filemode>755</filemode>
                      <sources>
                        <source>
                          <location>${dremio.distribution.directory}/bin</location>
                          <includes>
                            <include>dremio</include>
                            <include>dremio-admin</include>
                            <include>dremio-config</include>
                          </includes>
                        </source>
                      </sources>
                    </mapping>
                    <mapping>
                      <directory>/opt/dremio/conf</directory>
                      <sources>
                        <softlinkSource>
                          <location>/etc/dremio</location>
                        </softlinkSource>
                      </sources>
                    </mapping>
                    <mapping>
                      <directory>/opt/dremio/jars</directory>
                      <directoryIncluded>false</directoryIncluded>
                      <sources>
                        <source>
                          <location>${dremio.distribution.directory}/jars</location>
                        </source>
                      </sources>
                    </mapping>
                    <mapping>
                      <directory>/opt/dremio/licenses/dremio-${dremio.rpm.version}</directory>
                      <directoryIncluded>false</directoryIncluded>
                      <sources>
                        <source>
                          <location>${dremio.distribution.directory}/licenses</location>
                        </source>
                      </sources>
                    </mapping>
                    <mapping>
                      <directory>/opt/dremio/share/dremio</directory>
                      <directoryIncluded>false</directoryIncluded>
                      <sources>
                        <source>
                          <location>${dremio.distribution.directory}/share</location>
                        </source>
                      </sources>
                    </mapping>
                    <mapping>
                      <directory>/etc/dremio</directory>
                      <directoryIncluded>false</directoryIncluded>
                      <sources>
                        <source>
                          <location>${dremio.distribution.directory}/conf/logback.xml</location>
                        </source>
                        <source>
                          <location>${dremio.distribution.directory}/conf/logback-access.xml</location>
                        </source>
                        <source>
                          <location>${dremio.distribution.resources.directory}/rpm/conf/dremio-env</location>
                        </source>
                        <source>
                          <location>${dremio.distribution.resources.directory}/rpm/conf/dremio.conf</location>
                          <filter>true</filter>
                        </source>
                      </sources>
                      <configuration>true</configuration>
                    </mapping>
                    <mapping>
                      <directory>/etc/sysconfig</directory>
                      <directoryIncluded>false</directoryIncluded>
                      <sources>
                        <source>
                          <location>${dremio.distribution.resources.directory}/rpm/sysconfig/dremio</location>
                        </source>
                      </sources>
                      <configuration>true</configuration>
                    </mapping>
                    <mapping>
                      <directory>/var/lib/dremio</directory>
                      <username>dremio</username>
                      <groupname>dremio</groupname>
                      <filemode>755</filemode>
                    </mapping>
                    <mapping>
                      <directory>/var/run/dremio</directory>
                      <username>dremio</username>
                      <groupname>dremio</groupname>
                      <filemode>755</filemode>
                    </mapping>
                    <mapping>
                      <directory>/var/log/dremio</directory>
                      <username>dremio</username>
                      <groupname>dremio</groupname>
                      <filemode>755</filemode>
                    </mapping>
                    <mapping>
                      <directory>/etc/init.d</directory>
                      <filemode>555</filemode>
                      <sources>
                        <source>
                          <location>${dremio.distribution.resources.directory}/share/dremio.rc</location>
                          <destination>dremio</destination>
                        </source>
                      </sources>
                      <directoryIncluded>false</directoryIncluded>
                    </mapping>
                  </mappings>
                  <preinstallScriptlet>
                    <script>
getent group dremio >/dev/null || groupadd -r dremio
getent passwd dremio >/dev/null || \
  useradd -r -g dremio -d /var/lib/dremio -s /sbin/nologin \
  -c "Dremio DAC daemon user" dremio
exit 0
                    </script>
                  </preinstallScriptlet>
                 <postinstallScriptlet>
                  <scriptFile>${dremio.distribution.resources.directory}/rpm/scripts/postinstall</scriptFile>
                  <fileEncoding>utf-8</fileEncoding>
                 </postinstallScriptlet>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>default</id>
    </profile>
    <profile>
      <id>mapr</id>
      <dependencies>
        <dependency>
          <groupId>com.dremio.provision</groupId>
          <artifactId>dremio-shimloader</artifactId>
          <version>${project.version}</version>
        </dependency>
        <!-- This jar is a dependency of com.mapr.hadoop:maprfs jar.
             For some reason it is not packaged by the assembly plugin. Include it explicitly. -->
        <dependency>
          <groupId>org.json</groupId>
          <artifactId>json</artifactId>
          <version>${org.json.version}</version>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>community-build</id>
      <activation>
        <property>
          <name>dremio.oss-only</name>
          <value>!true</value>
        </property>
      </activation>
      <properties>
        <dremio.distribution.name>dremio-community</dremio.distribution.name>
      </properties>
    </profile>
  </profiles>
</project>
